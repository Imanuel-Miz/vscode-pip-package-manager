{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"/Users/imanuel_rb/VS_repos/rb_projects.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"sourceMaps": true,
    		"smartStep": true,
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/test/suite/index"
			],
			"sourceMaps": true,
    		"smartStep": true,
		}
	]
}
